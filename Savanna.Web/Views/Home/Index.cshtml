@{
    ViewBag.Title = "Home Page";
}

<div class="text-center mb-3">
    <h1 class="display-4" style="margin: auto;">Savanna Game</h1>
</div>

<div class="d-flex flex-column align-items-center p-2 gap-3" style="height: 100vh;">
    <button class="btn btn-outline-dark btn-lg" style="width: 200px;" onclick="location.href='@Url.Action("Play", "Game", new {isNewGame = true})'">
        New Game
    </button>
    <button class="btn btn-outline-dark btn-lg" style="width: 200px;" onclick="location.href='@Url.Action("Play", "Game", new {isNewGame = false})'">
        Load Game
    </button>

    <div id="loadGameModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Select Game:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div>
                    <!-- List of saved games to choose from -->
                    @{
                        if (!String.IsNullOrEmpty(ViewBag.Message))
                        {
                            <p>@ViewBag.Message</p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>